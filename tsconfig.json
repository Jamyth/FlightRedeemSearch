{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./config/tsconfig.base.json",
    "compilerOptions": {
        "target": "ESNext",
        "noEmit": true,
        "rootDir": "./src",
        "experimentalDecorators": true,

        "skipLibCheck": true,

        "isolatedModules": true
    },
    "include": ["./src/core", "./src/bin"],
    "ts-node": {
        "esm": true
    }
}
