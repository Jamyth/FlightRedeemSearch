{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "lib": ["DOM", "ESNext"],
        "module": "ESNext",

        "moduleResolution": "NodeNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,

        "strict": true,
        "forceConsistentCasingInFileNames": true,

        "downlevelIteration": true,
        "removeComments": true
    }
}
