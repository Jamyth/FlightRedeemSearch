{
    "$schema": "https://json.schemastore.org/tsconfig",
    "extends": "./tsconfig.base.json",
    "compilerOptions": {
        "target": "ES5",

        "sourceMap": true,
        "inlineSources": true,
        "baseUrl": "../src/web/src",

        "experimentalDecorators": true,

        "jsx": "react",

        "preserveValueImports": true,
        "importsNotUsedAsValues": "error",
        "isolatedModules": true,
        "paths": {
            "@core/*": ["../../core/*"]
        }
    },
    "include": ["../src/core", "../src/web"]
}
